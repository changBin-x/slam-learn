<?xml version="1.0" ?>
<launch>
    <arg name="paused" default="false"/>
    <arg name="use_sim_time" default="true"/>
    <arg name="gui" default="true"/>
    <arg name="headless" default="false"/>
    <arg name="debug" default="false"/>
    <arg name="verbose" default="false"/>
    <arg name="world_name" default="$(find mybot_gazebo)/worlds/obstacle_avoidance.world"/>
    <arg name="botName" default="mybot"/>
    <arg name="cmd_vel" default="/cmd_vel"/>
    <param name="cmd_vel_topicName" value="$(arg cmd_vel)"/>

    <!-- Start gazebo and load the world -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="paused" value="$(arg paused)"/>
        <arg name="use_sim_time" value="$(arg use_sim_time)"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="headless" value="$(arg headless)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="verbose" value="$(arg verbose)"/>
        <arg name="world_name" value="$(arg world_name)"/>
    </include>


    <!-- Spawn the example robot -->
    <arg name="gpu" default="false"/>
    <param name="robot_description" command="$(find xacro)/xacro --inorder '$(find mybot_description)/urdf/mybot_waffle.urdf.xacro' gpu:=$(arg gpu)" />
    <node pkg="gazebo_ros" type="spawn_model" name="spawn_model" args="-urdf -param /robot_description -model mybot_waffle_example"/>
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="robot_state_publisher">
        <param name="publish_frequency" type="double" value="10.0" />
    </node>

    <!-- RViz -->
    <arg name="rviz" default="true"/>
    <node if="$(arg rviz)" pkg="rviz" type="rviz" name="$(anon rviz)" respawn="false" output="screen" args="-d $(find mybot_description)/rviz/example.rviz" />

    <!-- control the bot to move -->
    <node name="$(arg botName)_drive" pkg="mybot_gazebo" type="mybot_drive" required="true" output="screen"/>

</launch>
